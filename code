import telebot # імпорт бібліотеки бота
from telebot import types # імпорт різних типів та видів

bot = telebot.TeleBot('5044461826:AAHPOE9njvv3DIvAXPuclBlxYW_3bwvIJfM') # api key

@bot.message_handler(commands=["start"])  # Встановлення кнопки старт
@bot.message_handler(commands=["button"])  # Встановлення кнопки
def button(message):  # Функція яка визначена, тобто присвоєння змінних
    backup = types.InlineKeyboardMarkup(row_width=2)  # Задання кількості кнопок в 1 рядку ( 2 шт. )

    places = types.InlineKeyboardButton ( 'Визначні місця',callback_data = 'places' )

    food = types.InlineKeyboardButton ( 'Заклади харчування',callback_data = 'food' )

    hotel = types.InlineKeyboardButton ( 'Готелі та хостели',callback_data = 'hotel' )

    businesscenter = types.InlineKeyboardButton ( 'Торгові і розважальні центри',callback_data = 'businesscenter' )

    history = types.InlineKeyboardButton ( 'Історія міста',callback_data = 'history' )

    car = types.InlineKeyboardButton ('Транспортні вузли', callback_data = 'car')

    backup.add ( places, food, hotel, businesscenter, history, car )  # Надання змінним сили

    bot.send_message ( message.chat.id,'Привіт! Напиши /help - дізнайся всю інформацію!', reply_markup=backup)

