@bot.message_handler(content_types=['text'])  # Присвоєння реакції бота не текстові повідомлення
def get_text_messages(message):  # Повідомлення-відповідь на ключові слова ( ТЕКСТ )
    if message.text == "Замок Любарта":  # Список слів на яких буде реагувати бот
        bot.send_message(message.from_user.id,
                         '1.Замок Любарта - це місце, яке обов`язково відвідує кожен турист'
                         ' приїхавши до Луцька. Вежу цієї фортеці видно здалеку. Замок Любарта є одним із найстаріших та найбільших замків України. '
                         ' Незважаючи на поважний вік (а фортеця збудована в 14 столітті), замок Любарта чудово зберігся. '
                         ' Він входить до складу Історико-культурного заповідника «Старий Луцьк». Крім того, '
                         ' поряд з Луцьким замком є декілька цікавих місць.' )
        bot.send_photo ( message.chat.id,open ( "F:\castle.jpg", "rb" ) )

    if message.text == "Музей книги":  # Список слів на яких буде реагувати бот
        bot.send_message(message.from_user.id,
                         'Музей  книги - дар владики Варфоломія, архієпископа Рівненського і Острозького УПЦ.'
                         ' Основна її частина – стародруки, найстарішому з яких 366 років!Ще один раритет – двохтомний Требник митрополита'
                         ' Петра Могили – відомого духовного, політичного і культурного діяча України.  Особливої ваги Требнику  додає те, '
                         ' що видано його було за життя митрополита – 1646 року.')
        bot.send_photo ( message.from_user.id,open ( "F:\MuzKnigi.jpg", "rb" ) )

    if message.text == "Музей дзвонів":  # Список слів на яких буде реагувати бот
        bot.send_message(message.from_user.id,
                         'Музей дзвонів у Луцькому замку – унікальний, єдиний в Україні. Його було відкрито у 1985 році. '
                         ' Наукові співробітники державного історико-культурного заповідника зібрали колекцію дзвонів XVII – поч. ХХ ст. '
                         ' Музей дзвонів розташований у «Владичій вежі» – єдиній дерев’яній споруді, яка збереглася у первозданному вигляді'
                         ' ще з XIV століття. У 60-х роках сюди звозили дзвони із закритих церков.')
        bot.send_photo ( message.from_user.id,open ( "F:\dzvoni.jfif", "rb" ) )

    if message.text == "Петропавлівський костел" :  # Список слів на яких буде реагувати бот
            bot.send_message ( message.from_user.id,
                               'Кафедральний костел святих апостолів Петра і Павла — пам`ятка архітектури національного значення,'
                               ' яка розташовується в історико-культурному заповіднику «Старий Луцьк» на вулиці Кафедральній у Луцьку.'
                               ' Костел і колегіум належали ордену єзуїтів і були збудовані для його потреб.'
                               ' Сьогодні колегіум використовують як навчальний заклад, а костел є кафедральним собором Луцької дієцезії.' )
            bot.send_photo ( message.from_user.id,open ( "F:\sobor.jpg","rb" ) )

    if message.text == "Лютеранська кірха" :  # Список слів на яких буде реагувати бот
        bot.send_message ( message.from_user.id,
                           'Лютеранська кірха - баптистська церква в Луцьку пам`ятка архітектури,'
                           ' розташована на вулиці Караїмській, 16, в історико-культурному заповіднику «Старий Луцьк».'
                           ' Кірху було збудовано у 1906 році як храм Луцької лютеранської громади.'
                           ' З часу побудови вона виконувала роль одного з головних храмів німецьких колоністів Волині. ' )
        bot.send_photo ( message.from_user.id,open ( "F:\kirha.jpg","rb" ) )

    if message.text == "Будинок з химерами" :  # Список слів на яких буде реагувати бот
        bot.send_message ( message.from_user.id,
                               'Будинок з химерами— архітектурна пам`ятка сучасності, розташована на території Історико-культурного'
                               ' заповідника «Старий Луцьк» на березі річки Стир. Проєкт будинку розробив волинський архітектор'
                               ' Ростислав Георгійович Метельницький. Збудований та продовжує добудовуватися скульптором Миколою Голованем.' )
        bot.send_photo ( message.from_user.id,open ( "F:\himeri.png","rb" ) )

    if message.text == "/help" :  # Встановлення кнопки хелп
        bot.send_message ( message.from_user.id, 'Що б отримати інформаційну довідку про визначне місце,'
                                                     ' потрібно написати його назву з великої букви. Наприклад:'
                                                     ' тобі потрібно отримати інформацію про Музей книги, тоді треба написати'
                                                     ' "Музей книги" і бот надасть всю інформацію. ')

bot.polling(none_stop=True,
            interval=0)  # Метод, який дає запит на нові повідомлення на бота, а в обмін - інформація
